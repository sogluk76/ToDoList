@page
@model MyFruits.Areas.Fruits.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Modifier</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Fruit.Id" />
            <div class="form-group">
                <label asp-for="Fruit.Name" class="control-label"></label>
                <input asp-for="Fruit.Name" class="form-control" />
                <span asp-validation-for="Fruit.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fruit.Description" class="control-label"></label>
                <input asp-for="Fruit.Description" class="form-control" />
                <span asp-validation-for="Fruit.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fruit.Price" class="control-label"></label>
                <input asp-for="Fruit.Price" class="form-control" />
                <span asp-validation-for="Fruit.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-success" />
                <a class="btn btn-primary" asp-page="./Index">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
